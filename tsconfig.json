{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", // Changed from "commonjs"
    "moduleResolution": "bundler", // Changed from "node"  
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Added this
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "isolatedModules": true, // Added for Vite
    "jsx": "react-jsx" // Added for React
  }
}